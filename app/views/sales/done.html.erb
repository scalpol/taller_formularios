<h2>El registro fue almacenado con éxito!</h2>
<table>
  <thead>
    <th>Código</th>
    <th>Detalle</th>
    <th>Categoría</th>
    <th>Valor</th>
    <th>Descuento</th>
    <th>Impuesto</th>
    <th>Total</th>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.cod %></td>
        <td><%= sale.detail %></td>
        <td><%= sale.category %></td>
        <td><%= sale.value %></td>
        <td><%= sale.discount %></td>
        <td><%= sale.tax %></td>
        <td><%= sale.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>
